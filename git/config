[user]
  name = Fred Smith
  email = derf@edx.org
	signingkey = 7AD073C7
[push]
  default = simple
[branch]
  autosetupmerge = true
  autosetuprebase = always
[alias]
  gr = log --pretty=\"format:%h %an %s\" --graph
  s = status
  forcepush = push --force origin HEAD
  newpush = "!git push --set-upstream origin \"$(git rev-parse --abbrev-ref HEAD)\""
  p = "push"
  pull-request = "!hub pull-request -m \"$(git log -1 --pretty=%B)\""
  undo = reset --soft HEAD~1
  discard = checkout --
  cop = "!cop() { DEFAULTBRANCH="master"; BRANCHNAME=${@-$DEFAULTBRANCH}; git fetch --all; git checkout $BRANCHNAME && git pull;}; cop"
  commitnewbranchandpr = "!commitnewbranchandpr() { ARGS=$@; BRANCHNAME=$(echo $ARGS | sed -e 's/ /-/g'); git checkout -b derf/$BRANCHNAME && git commit -a -m \"$ARGS\" && git newpush && git pull-request;}; commitnewbranchandpr"
  syncwithmaster = "!git checkout master; git pull; git checkout @{-1}; git rebase master"
  wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
  unpublish = "!git push origin :$(git branch-name)"
  summary = !git log $(git log -1 --merges --pretty=format:%H)..HEAD --oneline
  fixup = commit --amend
  branches = for-each-ref --sort='-authordate:iso8601' --format=' %(authordate:relative)%09%(refname:short)' refs/heads
  br = checkout -b
  trash = "!git add . && git commit -m 'trash' && git reset --hard HEAD^"
  sc = "commit"
  c = "commit"
  cam = "commit -a -m"
	alias = config --get-regexp ^alias\\.
  tfo = reset --hard
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[github]
  user = fredsmith
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[credential]
	helper = /home/derf/src/github.com/mithodin/pass-git-helper/pass-git-helper.sh
[rerere]
	enabled = true
[merge]
	conflictstyle = diff3
	tool = vimdiff
[mergetool]
	prompt = false
[commit]
